<script>
    const btn = document.getElementsByClassName("admin__btn");
    const btn_submit = document.getElementsByClassName("btnF")[0];
    const select = document.querySelector("#select");
    let admn_coffee = document.querySelector(".admin__coffee")
    let admn_tea = document.querySelector(".admin__tea");
    let admn_por = document.querySelector(".admin__food");
    let form = document.forms.addProduct;
    let aft = document.getElementsByClassName("admin__main");
    let header = document.getElementsByClassName("admin__header");

    select.addEventListener('change', (e) => {
        showFilter();
    });

    const showFilter = function () {
        btn[0].classList.add('dn');
        let val = select.options[select.selectedIndex].value;
        if (val === "Свежеобжаренный кофе") {;
            admn_coffee.classList.remove('dn');
            admn_coffee.classList.add('btnFs');
            admn_tea.classList.add("dn");
            admn_por.classList.add("dn");
            btn_submit.classList.add("admin__submit")
            btn_submit.classList.remove("admin__submit-food")
            btn_submit.classList.remove("admin__submit-tea")
        } else if (val === "Чай и кофейные напитки") {
            admn_coffee.classList.add('dn');
            admn_tea.classList.remove("dn");
            admn_por.classList.add("dn");
            btn_submit.classList.remove("admin__submit")
            btn_submit.classList.remove("admin__submit-food")
            btn_submit.classList.add("admin__submit-tea")
        } else {
            admn_coffee.classList.add('dn');
            admn_tea.classList.add("dn");
            admn_por.classList.remove("dn");
            btn_submit.classList.remove("admin__submit")
            btn_submit.classList.add("admin__submit-food")
            btn_submit.classList.remove("admin__submit-tea")
        }
    }
    btn[0].addEventListener("click", showFilter, false)
</script>
